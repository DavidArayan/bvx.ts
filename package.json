{
  "name": "bvx.ts",
  "version": "1.0.0",
  "description": "Generic BitVoxel Engine Implementation in TypeScript",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "test:ci": "jest --ci --runInBand --coverage",
    "test": "jest",
    "coverage": "jest --coverage",
    "clean": "rm -rf dist node_modules coverage package-lock.json",
    "build-ts": "rm -rf dist && tsc --noEmitOnError",
    "build": "npm run build-ts",
    "watch": "watch 'npm run build' ./src"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DavidArayan/bvx.ts.git"
  },
  "keywords": [
    "webgl",
    "renderer",
    "rendering",
    "3d",
    "graphics",
    "voxels",
    "voxel",
    "bitvoxel",
    "mesh",
    "geometry",
    "scenegraph",
    "ecs"
  ],
  "author": "David Arayan",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/DavidArayan/bvx.ts/issues"
  },
  "homepage": "https://github.com/DavidArayan/bvx.ts#readme",
  "devDependencies": {
    "@types/jest": "^26.0.23",
    "jest": "^27.0.4",
    "ts-jest": "^27.0.3",
    "typescript": "^4.3.4",
    "watch": "^1.0.2"
  }
}